<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_bg"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <ImageView
        android:src="@drawable/ic_phoenix_logo"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        android:text="Welcome"
        android:textColor="@color/cyan_highlight"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Field Agent"
        android:textColor="@color/cyan_highlight"
        android:textSize="20sp"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText android:hint="Enter your Agent ID" style="@style/AuthEditText"/>
    <EditText android:hint="Enter your Password" style="@style/AuthEditText" android:inputType="textPassword"/>

    <TextView
        android:text="Don't Have An Account? Register"
        android:textColor="@color/white_text"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginVertical="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button android:id="@+id/btnLogin" android:text="Log In" style="@style/AuthButton"/>
    <Button android:id="@+id/btnBack" android:text="Back" style="@style/AuthButton"/>
</LinearLayout>
