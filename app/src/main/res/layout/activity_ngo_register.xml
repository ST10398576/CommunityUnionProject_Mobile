<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_bg"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_phoenix_logo"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:text="Register"
            android:textColor="@color/cyan_highlight"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="NGO/NPO"
            android:textColor="@color/cyan_highlight"
            android:textSize="20sp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

            <TextView
                android:text="Register as NGO"
                android:textSize="24sp"
                android:textColor="@color/cyan_highlight"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etNgoName"
                android:hint="NGO Name"
                style="@style/AuthEditText" />

            <EditText
                android:id="@+id/etNgoEmail"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                style="@style/AuthEditText" />

            <EditText
                android:id="@+id/etNgoPhone"
                android:hint="Contact Number"
                android:inputType="phone"
                style="@style/AuthEditText" />

            <EditText
                android:id="@+id/etNgoAddress"
                android:hint="Physical Address"
                style="@style/AuthEditText" />

            <EditText
                android:id="@+id/etNgoPassword"
                android:hint="Password"
                android:inputType="textPassword"
                style="@style/AuthEditText" />

            <Button
                android:id="@+id/btnNgoRegister"
                android:text="Register"
                style="@style/AuthButton"
                android:layout_marginTop="16dp" />

            <TextView
                android:text="Already have an account? Log In"
                android:id="@+id/tvNgoLogin"
                android:textColor="@color/cyan_highlight"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
</ScrollView>
