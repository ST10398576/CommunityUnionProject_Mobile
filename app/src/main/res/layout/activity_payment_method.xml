<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="16dp"
    tools:context=".ui.user.PaymentMethodActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_phoenix_logo" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Go Fund Me"
        android:textColor="@android:color/white"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/tvCommunityUnionProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="#FF0000"
        android:padding="8dp"
        android:text="Community Union Project"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tvAmountChosenLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCommunityUnionProject"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Amount Chosen"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAmountChosenLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="#FF0000"
        android:padding="12dp"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvPaymentMethodLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAmount"
        android:layout_marginTop="24dp"
        android:text="Payment Method"
        android:textColor="@android:color/white" />

    <RadioGroup
        android:id="@+id/rgPaymentMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPaymentMethodLabel"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/rbInstantEft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instant EFT Payment"
            android:textColor="@android:color/white" />

        <RadioButton
            android:id="@+id/rbCreditCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit Card Payment"
            android:textColor="@android:color/white" />

        <RadioButton
            android:id="@+id/rbPayPal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay Pal Payment"
            android:textColor="@android:color/white" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_background_back"
            android:text="Back"
            android:textColor="#0000FF" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_back"
            android:text="Confirm"
            android:textColor="#0000FF" />
    </LinearLayout>

</RelativeLayout>