<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="16dp"
    tools:context=".ui.admin.ExportToolsActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_phoenix_logo" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Export Tools"
        android:textColor="@android:color/white"
        android:textSize="32sp" />

    <Button
        android:id="@+id/btnExportAidRequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_background"
        android:text="Export Aid Requests"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnExportAidOfferings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnExportAidRequests"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:text="Export Aid Offerings"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnExportSyncLogs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnExportAidOfferings"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:text="Export Sync Logs"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnPdfExportSuccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnExportSyncLogs"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_background_back"
        android:text="PDF Export Success ->"
        android:textColor="#0000FF"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_background_back"
        android:text="Back"
        android:textColor="#0000FF" />

</RelativeLayout>