<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="16dp"
    tools:context=".ui.agent.RegisterBeneficiaryActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_phoenix_logo" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Register Beneficiary"
        android:textColor="@android:color/white"
        android:textSize="32sp" />

    <EditText
        android:id="@+id/etFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_text_background"
        android:hint="Full Name and Surname"
        android:padding="12dp"
        android:textColorHint="#A9A9A9" />

    <EditText
        android:id="@+id/etCategoryOfAssistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etFullName"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_background"
        android:hint="Category of Assistance"
        android:padding="12dp"
        android:textColorHint="#A9A9A9" />

    <EditText
        android:id="@+id/etAssociatedNgoId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etCategoryOfAssistance"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_background"
        android:hint="Associated NGO ID Number"
        android:padding="12dp"
        android:textColorHint="#A9A9A9" />

    <EditText
        android:id="@+id/etLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etAssociatedNgoId"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_background"
        android:hint="Location"
        android:padding="12dp"
        android:textColorHint="#A9A9A9" />

    <Spinner
        android:id="@+id/spnIncomeLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etLocation"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_background"
        android:padding="12dp" />

    <EditText
        android:id="@+id/etContactNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spnIncomeLevel"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_background"
        android:hint="Contact Number"
        android:padding="12dp"
        android:textColorHint="#A9A9A9" />

    <EditText
        android:id="@+id/etReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etContactNumber"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_background"
        android:hint="Reason"
        android:padding="12dp"
        android:textColorHint="#A9A9A9" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnBack"
        android:background="@drawable/button_background"
        android:text="Add"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_background_back"
        android:text="Back"
        android:textColor="#0000FF" />

</RelativeLayout>