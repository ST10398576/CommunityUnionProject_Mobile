<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="16dp"
    tools:context=".ui.ngo.NgoLoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="67dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_phoenix_logo" />


    <Button
        android:id="@+id/btnQCF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnBack"
        android:layout_marginBottom="527dp"
        android:background="@drawable/button_background"
        android:text="Qhubeka Charity Foundation "
        android:textColor="@android:color/white"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnFFSA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnBack"
        android:layout_marginBottom="451dp"
        android:background="@drawable/button_background"
        android:text="Food Forward SA"
        android:textColor="@android:color/white"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnLBF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnBack"
        android:layout_marginBottom="368dp"
        android:background="@drawable/button_background"
        android:text="The Lunch Box Foundation"
        android:textColor="@android:color/white"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnFaTfA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnBack"
        android:layout_marginBottom="291dp"
        android:background="@drawable/button_background"
        android:text="Food and Trees for Africa"
        android:textColor="@android:color/white"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnNMF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnBack"
        android:layout_marginBottom="212dp"
        android:background="@drawable/button_background"
        android:text="The Nelson Mandela Foundation"
        android:textColor="@android:color/white"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnLSF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnBack"
        android:layout_marginBottom="129dp"
        android:background="@drawable/button_background"
        android:text="Love Story Foundation"
        android:textColor="@android:color/white"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnGOTG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnBack"
        android:layout_marginBottom="39dp"
        android:background="@drawable/button_background"
        android:text="Gift of the Givers"
        android:textColor="@android:color/white"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_background"
        android:text="Back"
        android:textSize="16dp"
        android:textColor="@android:color/white" />

</RelativeLayout>