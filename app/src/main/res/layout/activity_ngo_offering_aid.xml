<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="16dp"
    tools:context=".ui.ngo.NgoLoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_phoenix_logo" />


    <TextView
        android:id="@+id/tvWelcomeNgo"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="6dp"
        android:text="Offering AId"
        android:textColor="#00FFFF"
        android:textSize="36sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etNgoName"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvWelcomeNgo"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_text_background"
        android:hint="Enter Name of NGO/NPO"
        android:padding="12dp"
        android:textColorHint="#A9A9A9" />

    <EditText
        android:id="@+id/etCommunityAssist"
        android:layout_width="377dp"
        android:layout_height="86dp"
        android:layout_below="@id/etNgoName"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_background"
        android:hint="Community Assistance"
        android:padding="12dp"
        android:textColorHint="#A9A9A9" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_below="@id/etCommunityAssist"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_background"
        android:hint="Programs"
        android:padding="12dp"
        android:textColorHint="#A9A9A9" />

    <EditText
        android:id="@+id/etLoO"
        android:layout_width="378dp"
        android:layout_height="59dp"
        android:layout_below="@+id/etPassword"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_background"
        android:hint="Location of Opperations"
        android:padding="12dp"
        android:textColorHint="#A9A9A9" />

    <EditText
        android:id="@+id/etPassword3"
        android:layout_width="384dp"
        android:layout_height="73dp"
        android:layout_below="@+id/etLoO"
        android:layout_marginTop="17dp"
        android:background="@drawable/edit_text_background"
        android:hint="Contact Information"
        android:padding="12dp"
        android:textColorHint="#A9A9A9" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnBack"
        android:background="@drawable/button_background"
        android:text="Confirm"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_background"
        android:text="Back"
        android:textColor="@android:color/white" />

</RelativeLayout>