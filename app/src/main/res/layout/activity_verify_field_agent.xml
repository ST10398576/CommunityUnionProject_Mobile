<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android.padding="16dp"
    tools:context=".ui.admin.VerifyFieldAgentActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_phoenix_logo" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Verify Field Agent"
        android:textColor="@android:color/white"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/tvDocumentsVerification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="#FF0000"
        android:padding="8dp"
        android:text="Documents Verification"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tvFullNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDocumentsVerification"
        android:layout_marginTop="24dp"
        android:text="Full Name:"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tvFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvFullNameLabel"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:padding="12dp" />

    <TextView
        android:id="@+id/tvAssociatedNgoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvFullName"
        android:layout_marginTop="16dp"
        android:text="Associated NGO"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tvAssociatedNgo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAssociatedNgoLabel"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:padding="12dp" />

    <TextView
        android:id="@+id/tvAssociatedNgoIdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAssociatedNgo"
        android:layout_marginTop="16dp"
        android:text="Associated NGO ID Number"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tvAssociatedNgoId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAssociatedNgoIdLabel"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:padding="12dp" />

    <TextView
        android:id="@+id/tvLocationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAssociatedNgoId"
        android:layout_marginTop="16dp"
        android:text="Location"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLocationLabel"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:padding="12dp" />

    <TextView
        android:id="@+id/tvEmploymentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLocation"
        android:layout_marginTop="16dp"
        android:text="Employment"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tvEmployment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvEmploymentLabel"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:drawableEnd="@android:drawable/stat_sys_download"
        android:padding="12dp" />

    <TextView
        android:id="@+id/tvAgentPhotoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvEmployment"
        android:layout_marginTop="16dp"
        android:text="Agent Photo"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tvAgentPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAgentPhotoLabel"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:drawableEnd="@android:drawable/stat_sys_download"
        android:padding="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnReject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="Reject"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_back"
            android:text="Back"
            android:textColor="#0000FF" />

        <Button
            android:id="@+id/btnAccept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="Accept"
            android:textColor="@android:color/white" />
    </LinearLayout>

</RelativeLayout>