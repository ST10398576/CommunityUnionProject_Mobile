<resources>
    <!-- Base App Theme -->
    <style name="Theme.CommunityUnionProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_button</item>
        <item name="colorAccent">@color/cyan_highlight</item>
        <item name="android:windowBackground">@color/black_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Input Field Style -->
    <style name="AuthEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray_hint</item>
        <item name="android:background">@drawable/edittext_background</item>
    </style>

    <!-- Button Style -->
    <style name="AuthButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:backgroundTint">@color/blue_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">25dp</item>
    </style>
</resources>
